  <% end %>
  <div class="card__body">
    <%= link_to wishlist.name, wishlist_path(wishlist.id), method: :get, class: :card__title %>
    <p class="card__summary">
      <%= wishlist.memo %>
    </p>
    <p class="card__summary">
